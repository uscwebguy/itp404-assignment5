<table>
	<tr>
		
		<th>Title</th>
		<th>Price</th>
		<th>Play Count</th>
	</tr>
	{{#each model.songs as |song|}}
		<tr>
			<td>{{song.title}}</td>
			<td>{{song.price}}</td>
			<td>{{song.playCount}}</td>
		</tr>
	{{/each}}
</table>
